<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
	<legend>User Details</legend>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.input :tc_agreed, :as => :boolean %>
	<div class="form-actions">
		<%= f.submit 'Sign Up', :class => "btn btn-primary" %>
	</div>
<% end %>