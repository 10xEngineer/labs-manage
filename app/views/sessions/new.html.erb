	<div id="logo">
	<img src="/assets/invert-logo.png" alt="10xEngineer Labs" />
	</div>
  <div id="sessions">
  <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        </div>
      <% end %>
    <% end %>
</div>

<div id="loginbox">	
	<%= simple_form_for @user, :url => sessions_path, :html => { :class => 'form-vertical' } do |f| %>
		<p>Enter username and password to continue.</p>
		<%= f.input :email, :label => false, :placeholder => "Username", :wrapper => :unicorn %>
		<%= f.input :password, :label => false, :placeholder => "Password", :wrapper => :unicorn %>
		<div class="form-actions">
        	<span class="pull-left">Don't have account? <a href="/signup">Sign up</a> today. <br/>
            <%= link_to "Forgot password?", new_password_reset_path %></span>
            <span class="pull-right"><%= f.submit 'Login', :class => 'btn btn-inverse' %></span>
		</div>
	<% end %>
</div>