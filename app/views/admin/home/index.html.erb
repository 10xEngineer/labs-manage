<% content_for :content_header do %>
<h1>Admin dashboard</h1>
<% end %>

<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12 center" style="text-align: center;">					
			<ul class="stat-boxes">
				<li>
					<div class="right">
						<strong><%= User.where(:service => false).count %></strong>
						Total Users
					</div>
				</li>
				<li>
					<div class="right">
						<strong><%= User.where(:service => false, :created_at.gte => Time.now - 1.day).count %></strong>
						Users/24h
					</div>
				</li>
				<li>
					<div class="right">
						<strong><%= Key.all.count %></strong>
						SSH Keys
					</div>
				</li>
			</ul>
		</div>	
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="widget-box">
				<div class="widget-content nopadding">
				<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Keys</th>
						<th>Created</th>
					</tr>
				</thead>	
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.name %></td>
						<td><%= user.email %></td>
						<td><%= user.keys.count %></td>
						<td><%= user.created_at %></td>
					</tr>
					<% end %>
				</tbody>
				</table>
			</div>
		</div>
	</div>

</div>
